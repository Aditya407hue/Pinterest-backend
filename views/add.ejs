<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-4 text-white">
  <h1 class="text-xl font-semibold mt-4">Create a new post.</h1>
  <hr class="opacity-10 mt-2" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-4 py-2 mt-4" type="file" name="postimage" />
    <input
      class="block w-1/3 px-4 py-2 border-2 rounded-md mt-4 text-zinc-700"
      type="text"
      placeholder="Title"
      name="title" />
    <textarea
      class="block w-1/3 h-60 px-4 py-2 border-2 rounded-md mt-4"
      type="text"
      name="description"
      placeholder="Description">
    </textarea>
    <input
      class="block w-1/3 px-4 py-2 rounded-md mt-4 bg-red-700"
      type="submit"
      value="Create Post" />
  </form>
</div>

