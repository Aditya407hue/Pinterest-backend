<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){ %>
    <div class="card w-44">
      <div class="w-full h-48 rounded-lg bg-zinc-600 overflow-hidden">
        <img
          src="/images/uploads/<%= elem.image %>"
          alt=""
          class="w-full h-full object-cover hover:opacity-70" />
      </div>
      <a class="inline-block mt-2 text-md font-bold" href="/show/post/:cardid"
        ><%= elem.title %></a
      >
      <h6 class="text-xs opacity-70"><%= elem.user.username %></h6>
    </div>
    <% }) %>
  </div>
</div>

<% include ./partials/footer.ejs %>
